extends layout.pug
block head
    link(rel='stylesheet' href="/css/style-card-create.css")
    title create
block content
    main.maincontainer
        form.formato(id="form" method='POST' action='/v1/cards/create')
            input.input(type='number' name='number' placeholder='Card number' autofocus='')
            input.input(type='text' name='description' placeholder='Card description')
            input(type="submit", value="submit")
    block scripts
    script(src="/scripts/app-create.js") 